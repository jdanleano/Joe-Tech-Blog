<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div class="mb-3">
      <label for="post-title" class="form-label">Title</label>
      <input
        type="text"
        class="form-control"
        id="post-title"
        placeholder="Title"
        name="post-title"
      />
    </div>
    <div class="mb-3">
      <label for="post-text">Content</label>
      <textarea name="post-text" class="form-control" rows="3"></textarea>
      <button type="submit" class="btn btn-secondary">Create Post</button>
    </div>
  </form>
</section>

<script src="/javascript/add-post.js"></script>